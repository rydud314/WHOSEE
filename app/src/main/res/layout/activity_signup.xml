<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar_home"
            android:layout_width="match_parent"
            android:layout_height="70dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="20dp"
            android:textColor="#967BE4"
            android:textStyle="bold"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:background="@drawable/textview_border"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_id_join"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="left|center"
                android:text="아이디"
                android:textColor="#66539C"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/id_join"
                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="2dp"
                    android:ems="10"
                    android:inputType="textEmailAddress" />

                <Spinner
                    android:id="@+id/spinner_email_domains"
                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:entries="@array/email_domains" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_id_check"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#875FFD"
                android:gravity="center"
                android:text="아이디 체크"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_pw_join"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="비밀번호"
                android:textColor="#66539C"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/pw_join"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="6자리 이상 숫자 혹은 문자"
                android:textColorHint="#9B82E4"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:ems="10"

                android:inputType="textPassword" />

            <TextView
                android:id="@+id/txt_name_join"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="left|center"
                android:text="이름"
                android:textColor="#66539C"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name_join"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:layout_marginBottom="10dp"
                android:inputType="text" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="전화번호"
                android:textColor="#66539C"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text=" 010    -"
                    android:textColor="#66539C"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/tel_join01"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="text"
                    android:maxLength="4" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:text="   -"
                    android:textColor="#545F71"
                    android:textSize="28sp" />

                <EditText
                    android:id="@+id/tel_join02"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="text"
                    android:maxLength="4" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_join"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="#875FFD"
                android:layout_marginTop="20dp"
                android:text="입력 완료"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
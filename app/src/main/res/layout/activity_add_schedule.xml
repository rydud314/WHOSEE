        </LinearLayout>

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#875FFD"
            android:textColor="@color/white"
            android:text="Add"

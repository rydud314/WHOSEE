<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <include
            layout="@layout/toolbar_home"
            android:layout_width="match_parent"
            android:layout_height="70dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="일정 추가하기"
            android:textSize="20dp"
            android:textColor="#967BE4"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:paddingTop="10dp"
            android:background="@drawable/textview_border"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15dp"
                android:textColor="#66539C"
                android:textStyle="bold"
                android:text="이벤트 이름" />

            <EditText
                android:id="@+id/et_eventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:textColor="#967BE4"
                android:hint="Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#66539C"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="이벤트 시간" />


            <EditText
                android:id="@+id/et_startDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#967BE4"
                android:hint="시작 날짜(8자리)"
                android:ems="10"
                android:inputType="date" />

            <EditText
                android:id="@+id/et_startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#967BE4"
                android:hint="시작 시간(HH:MM)"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="17dp"
                android:inputType="time" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:text="" />


            <EditText
                android:id="@+id/et_endDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="종료 날짜(8자리)"
                android:textColor="#967BE4"
                android:ems="10"
                android:inputType="date" />

            <EditText
                android:id="@+id/et_endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="종료 시간(HH:MM)"
                android:textSize="17dp"
                android:textColor="#967BE4"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="time" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="41dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#66539C"
                    android:text="참여자"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_participant"
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColor="#967BE4" />

                <Spinner
                    android:id="@+id/spinner_email_domains"
                    android:layout_width="143dp"
                    android:layout_height="50dp"
                    android:entries="@array/email_domains" />
            </LinearLayout>


<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- 반투명 흰색 배경 -->
            <corners android:radius="16dp"/> <!-- 둥근 모서리 -->
            <stroke android:width="2dp" android:color="#80FFFFFF"/> <!-- 2dp 두께의 반투명 흰색 테두리 -->
            <gradient
                android:startColor="#FFFFFF"
                android:centerColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:angle="270"/>
        </shape>
    </item>

    <item>

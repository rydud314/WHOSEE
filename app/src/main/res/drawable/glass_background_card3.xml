    <!-- 글래스모피즘 레이어 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2196F3"/> <!-- 반투명 흰색 배경 -->
            <corners android:radius="16dp"/> <!-- 둥근 모서리 -->
            <!--            <stroke android:width="2dp" android:color="#AAFFFFFF"/> &lt;!&ndash; 2dp 두께의 반투명 흰색 테두리 &ndash;&gt;-->
        </shape>
    </item>

    <!-- 글래스모피즘 레이어 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- 반투명 흰색 배경 -->
            <corners android:radius="16dp"/> <!-- 둥근 모서리 -->
            <stroke android:width="2dp" android:color="#80FFFFFF"/> <!-- 2dp 두께의 반투명 흰색 테두리 -->
            <gradient
                android:startColor="#60FFFFFF"
                android:centerColor="#30FFFFFF"
                android:endColor="#80FFFFFF"
                android:angle="270"/>
        </shape>
    </item>

    <!-- 2/3 크기의 사각형 레이어 -->
    <item android:top="80dp">
        <shape android:shape="rectangle">
            <solid android:color="#80FFFFFF"/> <!-- 50% 투명도의 흰색 배경 -->
            <corners android:bottomLeftRadius="16dp" android:bottomRightRadius="16dp"/>
<!--            <stroke android:width="2dp" android:color="#AAFFFFFF"/> &lt;!&ndash; 2dp 두께의 반투명 흰색 테두리 &ndash;&gt;-->
            <gradient
                android:startColor="#95FFFFFF"
                android:centerColor="#30FFFFFF"
                android:endColor="#60FFFFFF"
                android:angle="270"/>
        </shape>
    </item>
</layer-list>

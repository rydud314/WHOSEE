<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/white"/> <!-- 반투명 흰색 배경 -->
                    <corners android:radius="16dp"/> <!-- 둥근 모서리 -->
                    <stroke android:width="3dp" android:color="#357747FD"/> <!-- 2dp 두께의 반투명 흰색 테두리 -->
                </shape>
            </item>

            <item android:width="85dp" android:height="85dp" android:gravity="center">
                <shape android:shape="oval">
                    <solid android:color="#E1DFDF"/> <!-- 반투명 흰색 배경 -->
                    <corners android:radius="16dp"/> <!-- 둥근 모서리 -->
                </shape>
            </item>
        </layer-list>
    </item>




</selector>